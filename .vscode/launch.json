    "version": "0.2.0",
    "configurations": [ 

        {
            "name": "Serverless",
            "type": "node",
            "request": "launch",
            // "cwd": "${workspaceFolder}",
            // "envFile": "${workspaceFolder}/.env",
            // "env": {
            //   "NODE_ENV": "dev",
            //   "SLS_DEBUG": "*"   
            // },
            // For package.json
            // "offline": "tsc && node --inspect-brk=5858 ./node_modules/.bin/serverless offline -s dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "offline",
            ],
            "port": 5858,
            "outputCapture": "std"
        },

        {
            "name": "Local",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
              "NODE_ENV": "dev",
              "SLS_DEBUG": "*"   
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug",
            ],
            "outputCapture": "std"
        }
    ]
}